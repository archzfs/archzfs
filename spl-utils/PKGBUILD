pkgname=("spl-utils")
pkgver=0.6.2_3.11.5
pkgrel=1
pkgdesc="Solaris Porting Layer kernel module support files."
depends=("linux=3.11.5-1")
makedepends=("linux-headers=3.11.5-1")
arch=("i686" "x86_64")
url="http://zfsonlinux.org/"
source=(http://archive.zfsonlinux.org/downloads/zfsonlinux/spl/spl-0.6.2.tar.gz
        spl-utils.hostid)
groups=("archzfs")
md5sums=('f00535bf89a7fde0e08f44a14a1f1e03'
         'a54f0041a9e15b050f25c463f1db7449')
license=("GPL")

build() {
  cd "$srcdir/spl-0.6.2"
  ./autogen.sh
  ./configure --prefix=/usr --libdir=/usr/lib --sbindir=/usr/bin \
              --with-config=user
  make
}

package() {
  cd "$srcdir/spl-0.6.2"
  make DESTDIR=$pkgdir install

  install -D -m644 $srcdir/spl-utils.hostid $pkgdir/etc/hostid
}
